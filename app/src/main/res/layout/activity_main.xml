<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/skyBlue"
        android:padding="15dp"
        >
<!--        <ImageView-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@drawable/tag_works"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:background="@color/skyBlue"-->
<!--            />-->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tariq Aluminium &amp; Glassware Works"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@color/skyBlue"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:background="@color/skyBlue"
        android:paddingHorizontal="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/cvCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_shopping_cart"
                android:padding="20dp"
                android:background="@color/skyBlueShade"
                />
        </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
           app:cardElevation="0dp"
           >
           <ImageView
               android:id="@+id/cvAdmin"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/baseline_admin_panel_settings"
               android:padding="15dp"
               android:background="@color/skyBlueShade"

               />

       </androidx.cardview.widget.CardView>



    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/skyBlue"
        >
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"

        />


</LinearLayout>